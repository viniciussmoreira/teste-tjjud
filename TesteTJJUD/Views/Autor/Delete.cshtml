@model TesteTJJUD.Models.Autor

@{
    ViewBag.Title = "Excluir Livro";
}

<h2>Excluir Livro</h2>

<div>
    <h4>Livro</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LivroAutores) <!-- Altere conforme a propriedade correta -->
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LivroAutores) <!-- Altere conforme a propriedade correta -->
        </dd>
        <!-- Adicione outras propriedades conforme necessário -->
    </dl>

    <h4>Tem certeza que deseja excluir este livro?</h4>
    @using (Html.BeginForm("Delete", "Autor", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.CodAu" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
    }
</div>
