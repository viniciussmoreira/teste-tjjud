@model TesteTJJUD.Models.Assunto

@{
    ViewBag.Title = "Details";
}

<h2 class="text-primary">@Model.Descricao</h2>

<div class="card">
    <div class="card-header bg-dark text-white">
        
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CodAs)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CodAs)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Descricao)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Descricao)</dd>

            <dt class="col-sm-3">Quantidade Livros</dt>
            <dd class="col-sm-9">@ViewBag.qtdLivros</dd>

        </dl>
    </div>
</div>

<p class="mt-3">
    @Html.ActionLink("Editar", "Edit", new { id = Model.CodAs }, new { @class = "btn btn-warning" })
    @Html.ActionLink("Voltar para Lista", "Index", null, new { @class = "btn btn-secondary" })
</p>
