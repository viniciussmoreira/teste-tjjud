@model TesteTJJUD.Models.Livro

@{
    ViewBag.Title = "Excluir Livro";
}

<h2>Excluir Livro</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Titulo)
        </dd>

    </dl>

    <h4>Tem certeza que deseja excluir este livro?</h4>
    @using (Html.BeginForm("Delete", "Livro", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Codl" />
        <input type="submit" value="Excluir" class="btn btn-danger btn-sm" />
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default btn-sm" })
    }
</div>
