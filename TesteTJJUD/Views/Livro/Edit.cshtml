@model TesteTJJUD.Models.Livro

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container mt-4">
        <div class="card shadow-sm p-4">
            <h4 class="mb-3">Livro</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
            @Html.HiddenFor(model => model.Codl)

            <div class="mb-3">
                @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control", @maxlength = "40" } })
                @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Editora, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Editora, new { htmlAttributes = new { @class = "form-control", @maxlength = "40" } })
                @Html.ValidationMessageFor(model => model.Editora, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Edicao, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Edicao, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                @Html.ValidationMessageFor(model => model.Edicao, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.AnoPublicacao, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.AnoPublicacao, new { htmlAttributes = new { @class = "form-control", type = "number", @maxlength = "4" } })
                @Html.ValidationMessageFor(model => model.AnoPublicacao, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Valor, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Valor, "{0:C}", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
            </div>



            <div class="text-end">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Voltar para Lista", "Index", null, new { @class = "btn btn-secondary ms-2" })
            </div>
        </div>
    </div>
}
